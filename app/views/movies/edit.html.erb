<h1>Edit Movie</h1>

<%= simple_form_for @movie, :html => { :multipart => true } do |f| %>
  <%= f.select :genre_id, @genres %>
  <%= f.input :title, label: "Movie Title" %>
  <%= f.input :description %>
  <%= f.input :director %>
  <%= f.button :submit %>
<% end %>

<%= link_to 'Show', @movie %>
<%= link_to 'Back', movies_path %>
