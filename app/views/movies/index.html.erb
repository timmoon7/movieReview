<h1 class="current-genre"><%= params[:genre] %></h1>

 <% if @movies.count == 0 %>
  <h2>There are no movies currently in this genre</h2>
<% else %>
  <div class="row">
    <% @movies.each do |movie| %>
      <div class="col-md-3 text-center">
        <a href="/movies/<%= movie.id %>">
          <%= image_tag movie.movie_img.url(:movie_index), class: "movie" %>
        </a>
      </div>
    <% end %>
  </div>
<% end %>